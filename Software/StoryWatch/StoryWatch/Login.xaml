<Window x:Class="StoryWatch.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryWatch"
        mc:Ignorable="d"
        Title="Login" Height="260" Width="220" HorizontalAlignment="Center" Background="AliceBlue">
    <Grid>
        <TextBox Margin="36,37,36,0" TextWrapping="Wrap" VerticalAlignment="Top" x:Name="txtUsername"/>
        <Button Content="Prijava" HorizontalAlignment="Center" Margin="0,136,0,0" VerticalAlignment="Top" Width="54" Height="23" Click="Login_Click"/>
        <Button Content="Registracija" HorizontalAlignment="Center" Margin="0,174,0,0" VerticalAlignment="Top" Width="68" Height="23" Click="Register_Click"/>
        <Label Content="Korisničko ime:" HorizontalAlignment="Left" Margin="31,11,0,0" VerticalAlignment="Top"/>
        <Label Content="Lozinka:" HorizontalAlignment="Left" Margin="31,70,0,0" VerticalAlignment="Top"/>
        <PasswordBox Margin="36,96,36,0" VerticalAlignment="Top" x:Name="txtPassword"/>

    </Grid>
</Window>
