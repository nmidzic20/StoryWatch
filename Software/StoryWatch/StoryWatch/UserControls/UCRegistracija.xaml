<UserControl x:Class="StoryWatch.UserControls.UCRegistracija"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoryWatch.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,0,0,0">
        <TextBox Margin="36,37,36,0" TextWrapping="Wrap" VerticalAlignment="Top" x:Name="txtUsername"/>
        <Button Content="Registriraj me" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Width="88" Height="28" Click="Registracija_Click" IsEnabled="False"/>
        <Label Content="Korisničko ime:" HorizontalAlignment="Left" Margin="31,11,0,0" VerticalAlignment="Top"/>
        <Label Content="Lozinka:" HorizontalAlignment="Left" Margin="31,76,0,0" VerticalAlignment="Top"/>
        <Label Content="Ponovite lozinku:" HorizontalAlignment="Left" Margin="31,125,0,0" VerticalAlignment="Top"/>
        <PasswordBox Margin="36,151,36,0" VerticalAlignment="Top" x:Name="txtPassword1" PasswordChanged="PasswordChanged" KeyUp="InputChanged"/>
        <PasswordBox Margin="36,102,36,0" VerticalAlignment="Top" x:Name="txtPassword2" PasswordChanged="PasswordChanged" KeyUp="InputChanged"/>

    </Grid>
</UserControl>
