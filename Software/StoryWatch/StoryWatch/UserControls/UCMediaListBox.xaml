<UserControl x:Class="StoryWatch.UserControls.MediaListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoryWatch.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="240">
    <StackPanel Background="Lavender" Margin="20,0,20,20">
        <DockPanel Height="40" x:Name="header" Width="200">
            <Label x:Name="lblTitle" Content="List title" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left"/>
            <Button x:Name="btnAdd" Click="btnAdd_Click" Content="+ Add " HorizontalAlignment="Right" Height="30" Margin="0,0,5,0" Background="PowderBlue" FontWeight="Bold"></Button>
        </DockPanel>
        <ListBox x:Name="lbMedia" Height="180" Width="200" SelectionChanged="lbMedia_SelectionChangedAsync">
            <ListBoxItem Content="Media1"></ListBoxItem>
            <ListBoxItem Content="Media2"></ListBoxItem>
        </ListBox>
    </StackPanel>
</UserControl>
