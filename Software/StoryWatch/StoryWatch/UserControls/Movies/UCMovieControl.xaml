<UserControl x:Class="StoryWatch.UserControls.Movies.UCMovieControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoryWatch.UserControls.Movies"
             mc:Ignorable="d" 
             >
    <Grid Margin="15,20,15,20">
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="TitleTextBlock" Text="{Binding Title}"/>
            <Button x:Name="btnAdd" Content="Add" Margin="20" Width="80" Click="btnAdd_Click"/>
            <Image Width="400" Height="400" x:Name="img" Source="{Binding BackdropPath}">
            </Image>
            <TextBlock TextWrapping="Wrap" Width="400" TextAlignment="Justify" x:Name="OverviewTextBlock" Text="{Binding Overview}"/>
        </StackPanel>
    </Grid>
</UserControl>
