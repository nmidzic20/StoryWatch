<Window x:Class="StoryWatch.UserControls.Movies.MovieReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryWatch.UserControls.Movies" 
        xmlns:winforms="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        mc:Ignorable="d"
        Title="MovieReport" Height="450" Width="800" KeyDown="MovieReport_keyDown" Focusable="True">
    <ScrollViewer>
        <WindowsFormsHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <winforms:ReportViewer x:Name="reportViewer" Dock="Fill">

            </winforms:ReportViewer>
        </WindowsFormsHost>
    </ScrollViewer>
</Window>
